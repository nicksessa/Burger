<div class="container">
  <h1>Eat-da-Burger!</h1>

  <div class="row">
    <div class="col">
      <h2>Custom Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div> <!-- END of the col -->
    <div class="col">
      <p>buttons go here</p>
    </div>
    <div class="col">
      <h2>Burgers that have been eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div> <!-- END of the col -->
  </div> <!-- END of the Row -->
  <h2>Enter the name of a burger that you want to eat, then click on submit</h2>

  <form class="create-form">

    <div class="form-group">
      <label for="burgerNameID">Burger Name:</label>
      <input type="text" id="burgerNameID" name="name">
    </div>

    <button type="submit">Submit</button>
  </form>

</div>
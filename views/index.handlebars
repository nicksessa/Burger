<div class="container">
  <h1>Eat-da-Burger!</h1>

  <div class="row">
    <div class="col">
      <h3>Custom Burgers</h3>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}

        {{/unless}}
        {{/each}}
      </ul>
    </div> <!-- END of the col -->
    <div class="col">
      <p></p>
    </div>
    <div class="col">
      <h3>Burgers that have been eaten!</h3>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
        <span> {{this.id}} - {{this.burger_name}}</span>
        <!-- {{> burgers/burger-block devoured=true}} -->
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div> <!-- END of the col -->
  </div> <!-- END of the Row -->
  <p>Enter the name of a burger that you want to eat, then click on submit</p>

  <form class="create-form">

    <div class="form-group">
      <label for="burgerNameID">Burger Name:</label>
      <input type="text" id="burgerNameID" name="burgerName">
    </div>

    <button type="submit">Submit</button>
  </form>

</div> <!-- END of the container -->